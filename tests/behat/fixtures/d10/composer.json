{
    "name": "myorg/mysite",
    "description": "Drupal 10 site for MYSITE",
    "license": "proprietary",
    "type": "library",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com",
            "homepage": "https://drevops.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/drevops/behat-steps",
    "support": {
        "issues": "https://github.com/drevops/behat-steps/issues",
        "source": "https://github.com/drevops/behat-steps"
    },
    "require": {
        "php": ">=8.2",
        "behat/behat": "^3.21.1",
        "behat/mink": ">=1.12",
        "behat/mink-selenium2-driver": ">=1.7",
        "composer/installers": "^2.3",
        "cweagans/composer-patches": "^1.7.3",
        "drupal/core-composer-scaffold": "~10.4.6",
        "drupal/core-project-message": "~10.4.6",
        "drupal/core-recommended": "~10.4.6",
        "drupal/draggableviews": "^2.1.4",
        "drupal/drupal-extension": "^5.1",
        "drupal/eck": "^2.0",
        "drupal/paragraphs": "^1.19",
        "drupal/pathauto": "^1.13",
        "drupal/scheduled_transitions": "^2.6",
        "drupal/search_api": "^1.38",
        "drupal/testmode": "^2.6",
        "drupal/webform": "^6.2.9",
        "drush/drush": "^13.6",
        "oomphinc/composer-installers-extender": "^2.0.1",
        "vlucas/phpdotenv": "^5.6.1",
        "webflo/drupal-finder": "^1.3.1",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "dantleech/gherkin-lint": "^0.2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1",
        "drevops/behat-phpserver": "^2.1.1",
        "drevops/behat-screenshot": "^1.6",
        "drupal/coder": "^8.3.28",
        "drupal/core-dev": "~10.4.6",
        "dvdoug/behat-code-coverage": "^5.3.2.1",
        "ergebnis/composer-normalize": "^2.47",
        "mglaman/phpstan-drupal": "^1.3.7",
        "palantirnet/drupal-rector": "^0.20.3",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpcompatibility/php-compatibility": "^9.3.5",
        "phpmd/phpmd": "^2.15",
        "phpspec/prophecy-phpunit": "^2.3",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^1.12.25"
    },
    "conflict": {
        "drupal/core": "^7.0"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "DrevOps\\BehatSteps\\": "../src/"
        },
        "classmap": [
            "scripts/composer/"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/console-extend-plugin": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "ergebnis/composer-normalize": true,
            "oomphinc/composer-installers-extender": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": true
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev",
            "dev-master": "1.x-dev"
        },
        "drupal-scaffold": {
            "file-mapping": {
                "[project-root]/.gitattributes": false,
                "[web-root]/.ht.router.php": false,
                "[web-root]/.htaccess": false,
                "[web-root]/INSTALL.txt": false,
                "[web-root]/README.txt": false,
                "[web-root]/example.gitignore": false,
                "[web-root]/sites/example.settings.local.php": false,
                "[web-root]/sites/example.sites.php": false,
                "[web-root]/web.config": false
            },
            "locations": {
                "web-root": "./web"
            }
        },
        "enable-patching": true,
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "drupal-post-install": [
            "drush -r web config-set system.site uuid 5b4646a8-ed7b-453c-b5b6-78196271f41b -y --uri=http://nginx",
            "drush -r web ev \"\\Drupal::entityTypeManager()->getStorage('shortcut_set')->load('default')->delete();\" --uri=http://nginx || true",
            "drush -r web updb -y --uri=http://nginx",
            "drush -r web cim --source=../config/sync -y --uri=http://nginx",
            "drush -r web cr -y --uri=http://nginx",
            "drush -r web pm:enable mysite_core -y --uri=http://nginx"
        ]
    }
}
