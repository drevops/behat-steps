{
    "name": "drevops/behat-steps",
    "type": "library",
    "description": "Collection of steps for Behat",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com",
            "homepage": "https://drevops.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/drevops/behat-steps",
    "support": {
        "issues": "https://github.com/drevops/behat-steps/issues",
        "source": "https://github.com/drevops/behat-steps"
    },
    "require": {
        "php": ">=8.1",
        "behat/behat": "^3",
        "drupal/drupal-extension": "^5@rc"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1",
        "drevops/behat-screenshot": "^1",
        "drupal/coder": "^8.3",
        "mglaman/drupal-check": "^1",
        "palantirnet/drupal-rector": "^0.15",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "DrevOps\\BehatSteps\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev",
            "dev-main": "1.x-dev"
        }
    }
}
